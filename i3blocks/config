# i3blocks configuration file
# Place this file at ~/.config/i3blocks/config

# Global properties
separator=true
separator_block_width=15
markup=none

# Volume (PulseAudio)
[volume]
command=sh ~/.dotfiles/i3blocks/scripts/volume.sh
min_width=VOLUME: ?
interval=once
signal=10

# Battery
[battery]
command=acpi -b | grep -o '[0-9]*%' | head -1 | awk '{print "BATTERY: "$1}'
interval=30

# CPU Load
[load]
command=cat /proc/loadavg | awk '{print "CPU: "$1}'
interval=5

# Memory
[memory]
command=free -h | awk '/^Mem:/ {print "RAM: "$3}'
interval=5

# Disk Space
[disk]
interval=30
command=sh ~/.dotfiles/i3blocks/scripts/disk.sh

# Time and Date
[date]
command=date '+%d/%m/%Y'
interval=1

# Time and Date
[time]
command=date '+%H:%M'
interval=1
